<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_item"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:clipToPadding="false"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:layout_marginStart="10dp"
        android:id="@+id/novel_card_view"
        android:layout_width="100dp"
        android:layout_height="140dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:clickable="true"
            android:id="@+id/novel_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wrap_image"
            android:clickable="true"
            android:focusable="true" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/novel_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:textFontWeight="600"
        android:fontFamily="sans-serif"
        android:gravity="start|center"
        android:maxLines="3"
        android:minLines="2"
        android:textColor="#EE191818"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/novel_card_view"
        tools:text="One Piece" />
</androidx.constraintlayout.widget.ConstraintLayout>